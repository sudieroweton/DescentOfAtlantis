            <string>//Sudie Roweton
// initial version: 6-23-16

//First check to make sure enemies exist 
if(instance_exists(obj_EnemyParent))
{
    //this enemyId keeps track of which are in range 
    enemyId = 0;

    //an array to keep track of enemies within range
    enemyNum = instance_number(obj_EnemyParent);
    
    //set everything to false to start
    enemyArr[enemyNum] = false;

    //loops to determine enemies in range    
    for (var i = 0; i &lt; enemyNum; i++)
    {   
        var enemy = instance_find(obj_EnemyParent, i);
        var enemyDist = point_distance(x, y, enemy.x, enemy.y);
    
        if (enemyDist &lt;= range) //in range!
        {
            enemyId = enemy;
            enemyArr[i] = true; //set a placeholder in the array
        }
    }

    if (enemyId != 0)
    {
        if (canShoot)
        {
            canShoot = false;
            alarm[1] = reloadSpeed; 
    
            //show an effect when enemy is hit
            effect_create_above(ef_ellipse, x, y, 10, c_aqua);
            
            //loop through the enemy array and do damage on all enemies in range
            for ( var i = 0; i &lt; enemyNum; i++)
            {
                if(enemyArr[i])
                {
                    var enemy = instance_find(obj_EnemyParent, i);
                    enemy.currentHealth -= damage;
                    //create a 'mist/cloud' effect for the enemies to go through
                    with(enemy)effect_create_below(ef_cloud, x, y, 10, c_lime); 
                    enemyArr[i] = false;
                }
             }
    
        }
    }
}//end 'exists' 
</string>
